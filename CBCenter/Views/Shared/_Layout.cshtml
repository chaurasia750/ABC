<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap core CSS -->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Children Book Center", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <section id="breadcrumb">
            <div class="container">
                <ol class="breadcrumb">
                    <li class="active">Dashboard</li>
                </ol>
            </div>
        </section>

        <section id="main">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <div class="list-group">
                            <a href="@Url.Action("Index","Home")" class="list-group-item active main-color-bg">
                                <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                                Dashboard <span class="badge">12</span>
                            </a>
                            <a href="@Url.Action("AddSchool","Settings")" class="list-group-item"><span class="glyphicon glyphicon-record" aria-hidden="true"></span>&nbsp;Add School<span class="badge"></span></a>
                            <a href="@Url.Action("SchoolList","Settings")" class="list-group-item"><span class="glyphicon glyphicon-list" aria-hidden="true"></span>&nbsp;School List<span class="badge"></span></a>
                            <a href="@Url.Action("AddBook","Settings")" class="list-group-item"><span class="glyphicon glyphicon-book" aria-hidden="true"></span> Add Book<span class="badge"></span></a>
                            <a href="@Url.Action("BookList","Settings")" class="list-group-item"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Book List<span class="badge"></span></a>
                            <a href="@Url.Action("NewOrder","Order")" class="list-group-item"><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> New Order<span class="badge"></span></a>
                            <a href="@Url.Action("TotalOrders","Home")" class="list-group-item"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> All Orders<span class="badge"></span></a>
                            <a href="@Url.Action("SearchOrder","Order")" class="list-group-item"><span class="glyphicon glyphicon-print" aria-hidden="true"></span> Print Order<span class="badge"></span></a>
                        </div>

                    </div>
                    <div class="col-md-9">

                        @RenderBody()

                    </div>
                </div>
            </div>
        </section>





        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Children Book Center</p>
        </footer>
    </div>


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->


</body>
</html>
