
@{
    ViewBag.Title = "SearchOrder";
}
<div class="panel panel-primary">
    <div class="panel-heading" style="background-color:  #095f59;">
        <h3 class="panel-title">Search Order</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                <input type="text" placeholder="Enter BillNo. to Search" class="form-control" id="BillNo" name="BillNo" />
            </div>
            <div class="col-md-3">
                <input type="button" value="Search" id="btnSearchOrder" class="btn btn btn-primary" />
            </div>
            </div>
        </div>
    </div>

<script>
    $(function () {
        $('#btnSearchOrder').click(function () {
            window.location.href = "@Url.Action("PrintOrder","Order")" + "?BillNo=" + $('#BillNo').val();
        });
    })
</script>