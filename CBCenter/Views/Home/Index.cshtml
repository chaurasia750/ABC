@{
    ViewBag.Title = "Home Page";
}

<div>
    <div class="panel panel-default">
        <div class="panel-heading" style="background-color:  #095f59;">
            <h3 class="panel-title">Website Overview</h3>
        </div>
        <div class="panel-body">
            <div class="col-md-4">
                <div class="well dash-box">
                    <a href="@Url.Action("SchoolList","Settings")">
                        <h2><span class="glyphicon glyphicon-user" aria-hidden="true"></span> @ViewBag.TotalSchools</h2>
                        <h4>Total Schools</h4>
                    </a>

                </div>
            </div>
            <div class="col-md-4">
                <div class="well dash-box">
                    <h2><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> @ViewBag.TotalBook</h2>
                    <h4>Total Books(2019)</h4>
                </div>
            </div>
            <div class="col-md-4">
                <div class="well dash-box">
                    <a href="@Url.Action("TotalOrders","Home")">
                        <h2><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>@ViewBag.TotalOrders</h2>
                        <h4>Total Orders</h4>
                    </a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="well dash-box">
                    <a href="@Url.Action("GenerateInvoice","Payment")">
                        <h2><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>@ViewBag.TotalOrders</h2>
                        <h4>Total Orders</h4>
                    </a>
                </div>
            </div>

        </div>
    </div>
    <!--Latest User-->
    <div class="panel panel-default">
        <div class="panel-heading" style="background-color:  #095f59;">
            <h3 class="panel-title">New Orders</h3>
        </div>
        <div>
            @{ Html.RenderAction("RecentlyOrders", "Home");}
        </div>
    </div>
</div>
